{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json"
  },
  "extends": [
    "next",
    "next/core-web-vitals"
  ],
  "ignorePatterns": ["!**/*", "!.next/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx", "*.js"],
      "rules": {
        "@next/next/no-html-link-for-pages": [
          "error",
          "src/pages"
        ]
      }
    }
  ]
}